@model Filme

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastre seu Filme</h1>

<form asp-action="Cadastrar" class="form-group">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Sinopse"></label>
        <input asp-for="Sinopse" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Duracao"></label>
        <input type="number" asp-for="Duracao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genero"></label>
        <select asp-for="Genero"
                asp-items="@Html.GetEnumSelectList<Genero>()"
                class="form-control">
            <option>Selecione</option>
        </select>
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-outline-dark" />
</form>

